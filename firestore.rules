rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.createdBy != null && request.resource.data.createdBy.id == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.createdBy != null && resource.data.createdBy.id == request.auth.uid;
    }
    match /phonebook/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /meta/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
